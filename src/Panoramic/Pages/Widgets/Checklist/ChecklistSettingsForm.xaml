<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Panoramic.Pages.Widgets.Checklist.ChecklistSettingsForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0"
                 x:Name="TitleTextBox"
                 Text="{x:Bind ViewModel.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Header="Title"
                 MaxLength="60" />

        <ToggleSwitch Grid.Row="1"
                      IsOn="{x:Bind ViewModel.Searchable, Mode=TwoWay}"
                      Header="Searchability"
                      OffContent="Tasks will not be filtered by global search"
                      OnContent="Tasks will be filtered by global search" />
    </Grid>

</Page>
