<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Panoramic.Pages.Widgets.RecentLinks.RecentLinksSettingsForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Text="{x:Bind ViewModel.Title, Mode=TwoWay}"
                 Header="Title" />

        <NumberBox Grid.Row="1"
                   Value="{x:Bind ViewModel.Capacity, Mode=TwoWay}"
                   Header="Capacity"
                   Description="The maximum amount of links it will hold."
                   SpinButtonPlacementMode="Compact"
                   Minimum="5"
                   Maximum="100" />

        <ToggleSwitch Grid.Row="2"
                      IsOn="{x:Bind ViewModel.ResetEveryDay, Mode=TwoWay}"
                      Header="Reset every day"
                      OffContent="Links will persist"
                      OnContent="Links will be cleared every day" />
    </Grid>

</Page>
