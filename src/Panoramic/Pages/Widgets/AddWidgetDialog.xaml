<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Panoramic.Pages.Widgets.AddWidgetDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Width="400" Padding="0 10 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Frame x:Name="ContentFrame" Grid.Row="0" />

        <Grid Grid.Row="1" Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="PreviousButton" Click="PreviousButton_Click" Visibility="Collapsed">Previous</Button>

            <Button Grid.Column="1" x:Name="NextButton" Click="NextButton_Click" IsEnabled="False" HorizontalAlignment="Right">Next</Button>
        </Grid>
    </Grid>
</Page>
