<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Panoramic.Pages.PreferencesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Width="350" Padding="0 10 0 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0"
                     Text="{x:Bind ViewModel.StoragePath, Mode=OneWay}"
                     IsReadOnly="True"
                     Header="Storage path" />

            <Button Grid.Row="1"
                    x:Name="PickFolderButton"
                    Click="ChangeStoragePathButton_Click"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">Change</Button>
        </Grid>
    </Border>
</Page>
