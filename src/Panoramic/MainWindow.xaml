<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Panoramic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="using:Panoramic.UserControls">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <uc:TitleBar x:Name="AppTitleBar" Grid.Row="0" Title="{x:Bind Title}" />

        <Border Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0">
                    <Button Click="AddWidgetButton_Click">Add widget</Button>
                </Border>

                <Grid Grid.Row="1" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" CornerRadius="5">
                            <Frame x:Name="FrameA1" />
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" CornerRadius="5">
                            <Frame x:Name="FrameB1" />
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" CornerRadius="5">
                            <Frame x:Name="FrameC1" />
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" CornerRadius="5">
                            <Frame x:Name="FrameA2" />
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" CornerRadius="5">
                            <Frame x:Name="FrameB2" />
                        </Border>
                        <Border Grid.Row="1" Grid.Column="2" CornerRadius="5">
                            <Frame x:Name="FrameC2" />
                        </Border>

                        <Border Grid.Row="2" Grid.Column="0" CornerRadius="5">
                            <Frame x:Name="FrameA3" />
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" CornerRadius="5">
                            <Frame x:Name="FrameB3" />
                        </Border>
                        <Border Grid.Row="2" Grid.Column="2" CornerRadius="5">
                            <Frame x:Name="FrameC3" />
                        </Border>
                    </Grid>

                    <Grid Grid.Column="1" RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" CornerRadius="5">
                            <Frame x:Name="FrameD1" />
                        </Border>

                        <Border Grid.Row="1" Padding="20" CornerRadius="5">
                            <Frame x:Name="FrameD2" />
                        </Border>
                    </Grid>

                </Grid>
            </Grid>

        </Border>

    </Grid>
</Window>
